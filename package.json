{
  "name": "sparxmaths",
  "version": "1.0.0",
  "description": "Sparx Maths in Desktop App.",
  "main": "main.js",
  "scripts": {
    "test": "npm run start",
    "start": "electron .",
    "build": "electron-builder build",
    "build:osx": "electron-builder build --mac",
    "build:win": "electron-builder build --win",
    "build:all": "npm run build:win && npm run build:osx",
    "pack": "npm run build"
  },
  "author": "SSKATE <minsu_kim@bishanoi.net>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "path": "^0.12.7"
  },
  "build": {
    "productName": "Sparx Maths",
    "appId": "sparxmaths",
    "mac": {
      "target": [
        "default"
      ],
      "icon": "assets/icons/favicon.icns"
    },
    "dmg": {
      "title": "Sparx Maths",
      "icon": "assets/icons/favicon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64",
            "arm64"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/logo.png"
    }
  }
}
